<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/home_pannel_background_iv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_first_album_default"/>
    <TextView
        android:id="@+id/home_pannel_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="포근하게 덮어주는 꿈의\n목소리"/>

    <ImageView
        android:id="@+id/home_pannel_button_play_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_title_tv" />

    <TextView
        android:id="@+id/home_pannel_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:text="총 15곡 2019.11.11"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album1_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/home_pannel_album1_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album2_iv"
        android:scaleType="fitXY"
        android:src="@drawable/img_album_exp"/>

    <TextView
        android:id="@+id/home_pannel_album1_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album1_singer_tv"
        app:layout_constraintTop_toTopOf="@id/home_pannel_album1_iv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album1_iv"
        android:text="잠이 안온다"/>

    <TextView
        android:id="@+id/home_pannel_album1_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_album1_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel_album1_iv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album1_iv"
        android:text="젠(Zen)"/>

    <ImageView
        android:id="@+id/home_pannel_album2_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_album_exp"/>

    <TextView
        android:id="@+id/home_pannel_album2_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album2_singer_tv"
        app:layout_constraintTop_toTopOf="@id/home_pannel_album2_iv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album2_iv"
        android:text="잠이 안온다"/>

    <TextView
        android:id="@+id/home_pannel_album2_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_album2_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel_album2_iv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album2_iv"
        android:text="젠(Zen)"/>
</androidx.constraintlayout.widget.ConstraintLayout>